{  
    // ‚ú® Smooth and visual effects
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "terminal.integrated.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,

    // üñ•Ô∏è OS configurations
    "terminal.explorerKind": "external",
    "window.titleBarStyle": "custom",
    "window.title": "${rootName}${separator}${profileName}",
    // "window.controlsStyle": "custom",
    "files.encoding": "iso88591",
 
    // ‚öôÔ∏è General settings
    "window.menuBarVisibility": "compact",
    "window.commandCenter": true,
    "window.customTitleBarVisibility": "never",
    "workbench.activityBar.location": "hidden",
    "editor.accessibilitySupport": "off",
    "editor.fontVariations": false,
    "workbench.startupEditor": "none",
    "remote.SSH.localServerDownload": "always",
    "remote.downloadExtensionsLocally": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.layoutControl.enabled": false,
    "workbench.statusBar.visible": true,
    "workbench.editor.empty.hint": "hidden",

    // üó∫Ô∏è Mini map
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 1,
    "editor.minimap.size": "fit",
    "editor.minimap.autohide": true,

    // üìù Code editor
    "editor.folding": true, // ENABLE IN CASE YOU WANT TO USE: FOLDING FUNCTIONS
    "editor.glyphMargin": false, // ENABLE IN CASE YOU WANT TO USE: THE DEBUGER
    "editor.scrollbar.verticalScrollbarSize": 7,
    "editor.scrollbar.horizontalScrollbarSize": 3,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 160,
    
    // ‚ñ∂Ô∏è Code execution
    "debug.onTaskErrors": "showErrors",
    "interactiveWindow.executeWithShiftEnter": true,
    
    // üé® Theme - https://code.visualstudio.com/api/references/theme-color
    // #181818 (background)
    // #BD9320 (highlight)
    // #8C6D18 (active)
    // #46360C (hover)
    // #525252 (unfocus text)
    // #CDD7D6 (text)
    // #786E52 (colored text)
    "workbench.colorCustomizations": {
        // Window
        "titleBar.activeBackground": "#181818",
        "titleBar.border": "#181818",
        // Base
        "focusBorder": "#00000000",
        "icon.foreground": "#525252",
        "list.hoverBackground": "#46360C",
        "tab.hoverBackground": "#46360C",
        "list.activeSelectionBackground": "#8C6D18",
        "list.inactiveSelectionBackground": "#8C6D18",
        // Links
        "textLink.foreground": "#786328",
        "textLink.activeForeground": "#BD9320",
        "editorLink.activeForeground": "#BD9320",
        // Editor
        "editor.background": "#181818",
        "editorIndentGuide.activeBackground1": "#8C6D18",
        "editorIndentGuide.background1": "#525252",
        "editorBracketMatch.border": "#8C6D18",
        "editor.selectionBackground": "#423920",
        "editor.lineHighlightBorder": "#362e18",
        "editor.lineHighlightBackground": "#362e18",
        // File Tabs
        "tab.activeBackground": "#181818",
        "tab.activeBorderTop": "#BD9320",
        "tab.border": "#181818",
        "tab.lastPinnedBorder": "#181818",
        // Editor Groups
        "editorGroup.border": "#181818",
        "editorGroupHeader.tabsBackground": "#181818",
        "editorGroupHeader.tabsBorder": "#181818",
        "list.dropBackground": "#8C6D1820",
        "sideBar.dropBackground": "#8C6D1820",
        "terminal.dropBackground": "#8C6D1820",
        "editorGroup.dropBackground": "#8C6D1820",
        "panelSection.dropBackground": "#8C6D1820",
        // Line Numbers
        "editorLineNumber.foreground": "#786E52",
        "editorLineNumber.activeForeground": "#CDD7D6",
        // SideBar
        "sideBar.background": "#181818",
        "sideBar.foreground": "#CDD7D6",
        "sideBar.border": "#181818",
        "sideBarSectionHeader.foreground": "#CDD7D6",
        "sideBarSectionHeader.border": "#181818",
        // StatusBar
        "statusBar.background": "#181818",
        "statusBar.border": "#181818",
        "statusBarItem.remoteBackground": "#BD9320",
        "statusBarItem.hoverBackground": "#46360C",
        "statusBarItem.compactHoverBackground": "#46360C",
        "statusBarItem.focusBorder": "#00000000",
        "statusBar.focusBorder": "#00000000",
        // Minimap
        "minimapSlider.hoverBackground": "#786e526e",
        "minimapSlider.activeBackground": "#8C6D1891",
        "minimapSlider.background": "#786e525b",
        "minimap.selectionHighlight": "#8C6D1885",
        // Scroll Bar
        "scrollbar.shadow": "#00000000",
        "editorOverviewRuler.border": "#181818",
        "scrollbarSlider.background": "#46360C40",
        "scrollbarSlider.activeBackground": "#8C6D1880",
        "scrollbarSlider.hoverBackground": "#42392080",
        // Terminal
        "terminal.background": "#181818",
        "terminal.border": "#181818",
        "terminal.tab.activeBorder": "#8C6D18",
        "panel.background": "#181818",
        "panel.border": "#181818",
        "panel.dropBorder": "#786328",
        "panelTitle.activeBorder": "#8C6D18",
        "badge.background": "#8C6D18",
        "settings.rowHoverBackground": "#362e18",
    },

    // üöÄ File indexing
    "search.followSymlinks": true,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/obj/**": true,
        "**/tmp.*/*": true,
        "**/tmp.*": true,
        "**/.*": true,
    },
    "files.exclude": {
        "**/.venv": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/dist": true,
    },

    // üíª Code formatting
    "[markdown]": {
        "editor.wordWrap": "off",
    },
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, UseTab: Never, ColumnLimit: 0}",

    // ü™ü Windows
    "terminal.external.windowsExec": "powershell.exe",

    // üêß Linux configuration
    "terminal.external.linuxExec": "/bin/bash",
    "terminal.integrated.defaultProfile.linux": "bash",

    // üß© Extensions
    "todohighlight.defaultStyle": {
        "color": "#ffffff",
        "backgroundColor": "#181818",
        "fontWeight": "bold",
        "overviewRulerColor": "f87060",
    },
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#f87060",
        },
        {
            "text": "importante!",
            "color": "#fff41b",
        }
    ],

    // üö´ Deactivate telemetry
    "telemetry.telemetryLevel": "off",
    "telemetry.feedback.enabled": false,
    "workbench.enableExperiments": false,
    "extensions.ignoreRecommendations": true,
    "python.analysis.reportExtraTelemetry": false,
    "python.analysis.enablePerfTelemetry": false,
    "python.analysis.typeEvaluation.enableExperimentalFeatures": false,
    "workbench.navigationControl.enabled": false,
    "chat.commandCenter.enabled": false,
}
